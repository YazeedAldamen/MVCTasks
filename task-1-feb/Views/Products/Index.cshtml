@model IEnumerable<task_1_feb.Product>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table  table-hover table-responsive">
    <tr>
        <th>
            @*@Html.DisplayNameFor(model => model.ProductName)*@
            <span>Product</span>

        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.UnitPrice)*@
            <span>Unit Price</span>

        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.UnitsInStock)*@
            <span>Units In Stock</span>

        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.Category.CategoryName)*@
            <span>Category</span>

        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ProductName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UnitPrice)

        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UnitsInStock)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Category.CategoryName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.ProductID },new { @class = "btn btn-success btn-responsive" }) |
            @Html.ActionLink("Details", "Details", new { id = item.ProductID }, new { @class = "btn btn-warning" }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.ProductID }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
