@model IEnumerable<task_2nd_Feb.Models.TaskEmployee>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            First Name
        </th>
        <th>
            Last Name
        </th>
        <th>
            Email
        </th>
        <th>
            Phone
        </th>
        <th>
            Age
        </th>
        <th>
            Job Title
        </th>
        <th>
            Gender
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @*@Html.DisplayFor(modelItem => item.First_Name)*@
                @item.First_Name
            </td>
            <td>
                @*@Html.DisplayFor(modelItem => item.Last_Name)*@
                @item.Last_Name
            </td>
            <td>
                @*@Html.DisplayFor(modelItem => item.Email)*@
                @item.Email
            </td>
            <td>
                @*@Html.DisplayFor(modelItem => item.Phone)*@
                @item.Phone
            </td>
            <td>
                @*@Html.DisplayFor(modelItem => item.Age)*@
                @item.Age
            </td>
            <td>
                @*@Html.DisplayFor(modelItem => item.Job_Title)*@
                @item.Job_Title
            </td>
            <td>

                @if (item.Gender == true)
                {
                    <span>Male</span>
                }
                else
                {
                    <span>Female</span>}

            </td>
            <td>
                @*@Html.ActionLink("Edit", "Edit", new { id = item.Id })*@
                <a class="btn btn-success btn-responsive" href="@Url.Action( "Edit", new { id = item.Id })">Edit</a>
                |
                @*@Html.ActionLink("Details", "Details", new { id = item.Id })*@
                <a class="btn btn-warning" href="@Url.Action( "Details", new { id = item.Id })">Details</a>|
                @*@Html.ActionLink("Delete", "Delete", new { id = item.Id }
           )*@
                <a class="btn btn-danger" href="@Url.Action( "Delete", new { id = item.Id })">Delete</a>
            </td>
        </tr>
    }

</table>
